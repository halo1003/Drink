<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">

            <com.yalantis.phoenix.PullToRefreshView
                android:id="@+id/pull_to_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.loopeer.cardstack.CardStackView
                    android:id="@+id/stackview_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fbutton_color_wet_asphalt"
                    android:clipToPadding="false"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"/>

            </com.yalantis.phoenix.PullToRefreshView>

            <RelativeLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|center_vertical"
                android:gravity="bottom">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@color/fbutton_color_midnight_blue"
                    android:onClick="onPreClick"
                    android:paddingHorizontal="30dp"
                    android:text="Pre"
                    android:textColor="#f8fdf9" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@color/fbutton_color_midnight_blue"
                    android:onClick="onNextClick"
                    android:paddingHorizontal="30dp"
                    android:text="Next"
                    android:textColor="#f8fdf9" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/fbutton_color_alizarin">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fbutton_color_midnight_blue"
            android:gravity="top"
            android:layout_weight="5.9">


            <!--<Button-->
            <!--android:id="@+id/btnMain"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:text="Push"-->
            <!--android:layout_marginHorizontal="50dp"-->
            <!--android:background="@drawable/shape_button"-->
            <!--android:drawableStart="@android:drawable/ic_popup_reminder" />-->
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="50dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/fbutton_color_alizarin"
                fancy:fb_focusColor="#ffc800"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="Push"
                fancy:fb_textColor="#FFFFFF" />

            <TextView
                android:layout_below="@+id/btnMain"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Click button to capture one's"
                android:textSize="10dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="30">

        <com.qhutch.bottomsheetlayout.BottomSheetLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedHeight="20dp"
            android:layout_weight="1">

            <LinearLayout
                android:background="@color/fbutton_color_midnight_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@color/fbutton_color_asbestos"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageViewArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="15dp"
                        android:src="@drawable/ic_arrow"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Click arrow to open menu"
                        android:textColor="@android:color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnGraph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="50dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/fbutton_color_emerald"
                        fancy:fb_focusColor="#ffc800"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="Graph"
                        fancy:fb_textColor="#FFFFFF" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="50dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/fbutton_color_concrete"
                        fancy:fb_focusColor="#ffc800"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="Download"
                        fancy:fb_textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

        </com.qhutch.bottomsheetlayout.BottomSheetLayout>

    </LinearLayout>
</RelativeLayout>